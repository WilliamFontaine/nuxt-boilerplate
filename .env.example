# Database Configuration
# Main database connection (required)
NUXT_DATABASE_URL="postgresql://postgres:P@ssw0rd@localhost:5432/database"

# Test database connection (required for testing)
# Uses a separate database to avoid conflicts during E2E tests
TEST_DATABASE_URL="postgresql://postgres:P@ssw0rd@localhost:5432/test_database"

# Application Environment
# Set to 'production' in production environments
NODE_ENV="development"

# Optional: Enable debug mode for Nuxt
# DEBUG="nuxt:*"

# Optional: Custom port for development server
# PORT="3000"

# Security Configuration
# CORS origins for production (comma-separated list)
# CORS_ORIGIN="https://yourdomain.com,https://www.yourdomain.com"

# Authentication Configuration
# Session password for secure cookies (required for authentication)
# Generate with: openssl rand -base64 32
NUXT_SESSION_PASSWORD="password-with-at-least-32-characters"

# SEO Configuration
# Public site URL for canonical URLs and Open Graph tags
NUXT_PUBLIC_SITE_URL="http://localhost:3000"

# Production only variables (uncomment and configure for production)
# NUXT_PUBLIC_SITE_URL="https://yourdomain.com"
# NUXT_AUTH_SECRET="your-super-secure-secret-key-here"
# NITRO_HOST="0.0.0.0"
# NITRO_PORT="3000"
