# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Main database connection (required)
# Format: postgresql://username:password@host:port/database_name
NUXT_DATABASE_URL="postgresql://postgres:P@ssw0rd@localhost:5432/database"

# Test database connection (required for testing)
# Uses a separate database to avoid conflicts during E2E tests
TEST_DATABASE_URL="postgresql://postgres:P@ssw0rd@localhost:5432/test_database"

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================

# Session password for secure cookies (required for authentication)
# Must be at least 32 characters long
# Generate with: openssl rand -base64 32
NUXT_SESSION_PASSWORD="password-with-at-least-32-characters"

# CORS origins for production (comma-separated list)
# Required in production environments for API access
# CORS_ORIGIN="https://yourdomain.com,https://www.yourdomain.com"

# =============================================================================
# SEO & PUBLIC CONFIGURATION
# =============================================================================

# Public site URL for canonical URLs and Open Graph tags
# Used for SEO and social media sharing
NUXT_PUBLIC_SITE_URL="http://localhost:3000"

# =============================================================================
# EMAIL CONFIGURATION (SMTP)
# =============================================================================

# SMTP host for sending emails
NUXT_NODEMAILER_HOST="smtp.gmail.com"

# SMTP port (usually 587 for STARTTLS, 465 for SSL, 25 for unencrypted)
NUXT_NODEMAILER_PORT="587"

# SMTP authentication user (your email address)
NUXT_NODEMAILER_AUTH_USER="your-email@gmail.com"

# SMTP authentication password
# For Gmail: use an App Password (not your regular password)
# Generate at: https://myaccount.google.com/apppasswords
NUXT_NODEMAILER_AUTH_PASS="your-app-password"

# Default "from" email address for outgoing emails
NUXT_NODEMAILER_FROM="noreply@yourdomain.com"

# =============================================================================
# RATE LIMITING & SECURITY
# =============================================================================

# Global API rate limiting (requests per IP across all endpoints)
# Default: 150 requests per 5 minutes
NUXT_RATE_LIMIT_GLOBAL_MAX=150
NUXT_RATE_LIMIT_GLOBAL_WINDOW=5

# Login attempts rate limiting (failed login attempts per email+IP)
# Default: 5 attempts per 15 minutes before blocking
NUXT_RATE_LIMIT_LOGIN_MAX=5
NUXT_RATE_LIMIT_LOGIN_WINDOW=15

# Token requests rate limiting (verification emails, password reset per user)
# Default: Wait 5 minutes between token requests
NUXT_RATE_LIMIT_TOKEN_COOLDOWN=5

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Application environment
NODE_ENV="development"

# Optional: Enable debug mode for Nuxt (uncomment to enable)
# DEBUG="nuxt:*"

# Optional: Custom port for development server
# PORT="3000"

# =============================================================================
# PRODUCTION ONLY VARIABLES
# Uncomment and configure these for production deployment
# =============================================================================

# NUXT_PUBLIC_SITE_URL="https://yourdomain.com"
# CORS_ORIGIN="https://yourdomain.com,https://www.yourdomain.com"
# NUXT_SESSION_PASSWORD="password-with-at-least-32-characters"
# NITRO_HOST="0.0.0.0"
# NITRO_PORT="3000"

# Production Rate Limiting (stricter limits recommended)
# NUXT_RATE_LIMIT_GLOBAL_MAX=100
# NUXT_RATE_LIMIT_GLOBAL_WINDOW=5
# NUXT_RATE_LIMIT_LOGIN_MAX=3
# NUXT_RATE_LIMIT_LOGIN_WINDOW=30
# NUXT_RATE_LIMIT_TOKEN_COOLDOWN=10
